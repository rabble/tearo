---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import type { Project } from '../types';

const projects = (await Astro.glob<Project>('./project/**/*.md'))
	.filter(({ frontmatter }) => !!frontmatter.publishDate)
	.sort(
		(a, b) =>
			new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf()
	);
---

<html lang="en">
	<head>
		<MainHead
			title="All Articles | Car Free Te Aro"
			description="Articles adovcating for a car free Te Aro"
		/>
		<style>
			.grid {
				display: flex;
				flex-direction: column;
				gap: 3rem;
			}
			.section {
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
			.cards {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1rem;
			}
			h2 {
				font-size: var(--f-u4);
				font-weight: 900;
				color: var(--t-fg);
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1 class="title">All Articles</h1>
			<div class="grid">
				<div class="section">
					<h2>Current Projects</h2>
					<div class="cards">
						<ProjectCard
							title="The Golden Mile Project"
							description="Wellington's biggest step toward people-first streets"
							href="/project/golden-mile"
							tags={["current", "infrastructure"]}
						/>
						<ProjectCard
							title="Living Streets for Te Aro"
							description="How living streets could transform our neighborhood"
							href="/project/living-streets"
							tags={["design", "infrastructure"]}
						/>
					</div>
				</div>

				<div class="section">
					<h2>Key Topics</h2>
					<div class="cards">
						<ProjectCard
							title="Climate Action Through Better Streets"
							description="How car-free streets help fight climate change"
							href="/project/climate-action"
							tags={["climate", "future"]}
						/>
						<ProjectCard
							title="Why Car Free?"
							description="The case for a car-free Te Aro"
							href="/project/why-car-free"
							tags={["background"]}
						/>
						<ProjectCard
							title="Business Benefits"
							description="How car-free streets boost local business"
							href="/project/what-about-businesses"
							tags={["background"]}
						/>
						<ProjectCard
							title="Other Cities"
							description="Learning from car-free success stories"
							href="/project/other-cities"
							tags={["examples"]}
						/>
					</div>
				</div>
			</div>
		</div>
		<Footer />
	</body>
</html>
