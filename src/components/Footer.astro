const currentYear = new Date().getFullYear();
---

<footer>
	<div class="footer-content">
		<div class="footer-main">
			<span class="copyright">&copy; {currentYear} TeAro.org</span>
			<small class="byline">Built with üöÄ in P≈çneke</small>
		</div>
		<div class="footer-links">
			<a href="/about">About</a>
			<a href="/projects">Projects</a>
			<a href="https://twitter.com/CarFreeTeAro">Twitter</a>
		</div>
