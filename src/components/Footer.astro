<style>
	footer {
		margin-top: 4rem;
		padding: 3rem 2rem;
		background: var(--t-fg);
		color: var(--t-bg);
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.footer-main {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.copyright {
		font-size: var(--f-d1);
		font-weight: 500;
	}

	.byline {
		font-size: var(--f-d2);
		opacity: 0.8;
	}

	.footer-links {
		display: flex;
		gap: 2rem;
	}

	.footer-links a {
		color: var(--t-bg);
		text-decoration: none;
		font-size: var(--f-d1);
		transition: opacity 0.2s ease;
	}

	.footer-links a:hover {
		opacity: 0.8;
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			gap: 2rem;
			text-align: center;
		}
	}
</style>
